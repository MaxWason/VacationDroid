<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent" android:layout_height="match_parent"
android:id="@+id/vacationsName">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/dashImg"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/placeholder"
            android:layout_margin="4dp"
            android:layout_rowSpan="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="VacationName"
            android:id="@+id/dashNameVacations"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Vacation Place"
            android:id="@+id/dashPlaceVacations"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Vacation Dates"
            android:id="@+id/dashDateVacations"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="4dp" />

    </GridLayout>

</FrameLayout>