<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:alignmentMode="alignMargins"
        android:columnCount="8"
        android:rowCount="4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="User"
            android:id="@+id/userdashUsername"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="top|left"
            android:layout_margin="4dp"
            android:layout_rowSpan="1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Current Vacation"
            android:id="@+id/userdashVacationTitle"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="My Vacation"
            android:id="@+id/userdashMyVacations"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:layout_gravity="left"
            android:clickable="true"
            android:onClick="onVacationListUserPress"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/userdashImage"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/placeholder"
            android:layout_rowSpan="2"
            android:onClick="onUserDashImagePress"
            android:layout_margin="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Description"
            android:id="@+id/userdashVacationDescription"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="top|left"
            android:layout_margin="4dp" />

    </GridLayout>
</FrameLayout>